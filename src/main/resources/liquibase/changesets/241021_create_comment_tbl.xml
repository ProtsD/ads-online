<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create_table_comment_tbl" author="RUPROTSD">
        <preConditions>
            <and>
                <not>
                    <tableExists tableName="comment"/>
                </not>

                <tableExists tableName="user"/>

                <tableExists tableName="ad"/>
            </and>
        </preConditions>

        <createTable tableName="comment">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="text" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="ad_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_comment_ad_id"
                             referencedTableName="ad"
                             referencedColumnNames="id"/>
            </column>

            <column name="user_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_comment_user_id"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <rollback>
            <dropTable tableName="comment"/>
        </rollback>

    </changeSet>

</databaseChangeLog>