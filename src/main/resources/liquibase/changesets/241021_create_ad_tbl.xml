<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="create_table_ad_tbl" author="RUPROTSD">
        <preConditions>
            <and>

                <not>
                    <tableExists tableName="ad"/>
                </not>

                <tableExists tableName="user"/>

            </and>

        </preConditions>

        <createTable tableName="ad">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="title" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="image" type="varchar()">
                <constraints nullable="false"/>
            </column>

            <column name="author_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_ad_user_id"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <rollback>
            <dropTable tableName="ad"/>
        </rollback>

    </changeSet>

</databaseChangeLog>